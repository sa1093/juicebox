<div class="col-md-12">
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @juice.name %>
</p>

<p>
  <strong>Capacity:</strong>
  <%= @juice.capacity %>
</p>

<p>
  <strong>Price:</strong>
  <%= @juice.price %>
</p>

<%= form_tag(url_for(:action => 'show'), :remote => true) do %>
<%= hidden_field_tag :user_id, current_user.id %>
<%= hidden_field_tag :juice_id, @juice.id %>
<!-- unless: いいねされてなかったらボタン表示 -->
  　　<% unless Post.find_by(user_id: current_user.id, juice_id: @juice.id) %>
  <h1><%= submit_tag "👍" %></h1>
  <% else %>
  <h1>👍</h1>
  　　<% end %>
  
  <% end %>

<%= current_user.email %>

<%= link_to 'Edit', edit_juice_path(@juice) %> |
<%= link_to 'Back', juices_path %>
</div>